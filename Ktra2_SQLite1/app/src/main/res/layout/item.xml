<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    android:layout_margin="3dp"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/pink">

<LinearLayout
    android:weightSum="5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_marginVertical="10dp"
        android:id="@+id/imageView"
        android:layout_weight="1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_work"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4">
        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="tv_item_name"
            android:textAppearance="@style/TextAppearancePrimary"
             />

        <TextView
            android:id="@+id/tv_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textSize="15dp"
            android:text="tv_item_status"
            android:textAppearance="@style/TextAppearancePrimary"
            />

        <TextView
            android:id="@+id/tv_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginHorizontal="10dp"
            android:text="tv_item_detail"
            android:textAppearance="@style/TextAppearancePrimary"
            />

        <TextView
            android:id="@+id/tv_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginHorizontal="10dp"
            android:text="tv_item_date"
            android:textAppearance="@style/TextAppearancePrimary"
             />

        <TextView
            android:id="@+id/tv_item_is_coop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginHorizontal="10dp"
            android:text="tv_item_is_coop"
            android:textAppearance="@style/TextAppearancePrimary"
            />
    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>